{
  "name": "color-theory-generator",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/api & npm run dev --workspace=packages/web",
    "dev:api": "npm run dev --workspace=packages/api",
    "dev:web": "npm run dev --workspace=packages/web",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=packages/api",
    "build:web": "npm run build --workspace=packages/web",
    "start": "npm run start --workspace=packages/api",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "clean": "npm run clean --workspaces",
    "test": "npm run test --workspaces"
  },
  "author": "anisa07",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^5.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "color-theory",
    "color-generator",
    "design-tools",
    "monorepo",
    "typescript"
  ],
  "description": "A comprehensive color theory generator with 60-30-10 rule implementation, dual themes, and WCAG-compliant contrast calculations"
}
